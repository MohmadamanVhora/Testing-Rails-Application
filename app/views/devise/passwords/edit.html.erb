<div class="container mt-5" style="width: 700px;">
  <h2 class="mb-3">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-3">
      <%= f.label :password, class: "form-label", "New password" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, class: "form-control", autofocus: true, autocomplete: "new-password" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, class: "form-label", "Confirm new password" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "Change my password", class: "btn btn-primary rounded-1" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

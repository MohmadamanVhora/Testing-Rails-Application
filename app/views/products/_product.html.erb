<tr>
  <td><%= product.product_name %></td>
  <td><%= product.description %></td>
  <td><%= product.price %></td>
  <td>
    <% if is_creator?(product) %>
      <%= link_to raw('<i class="fa-solid fa-eye fa-lg" style="color: #12e4f3;"></i>'), product_path(product), class: 'btn  p-1', title: "Show" %>
      <%= link_to raw('<i class="fa-solid fa-pen-to-square fa-lg" style="color: #f4e32a;"></i>'), edit_product_path(product), class: "btn  p-1", title: "Edit" %>
      <%= link_to raw('<i class="fa-solid fa-trash-can fa-lg" style="color: #f02828;"></i>'), product_path(product), class: "btn  p-1", title: "Remove", data: { turbo_method: :delete, turbo_confirm: :"Are You Sure?" } %>
    <% else %>
      <%= link_to raw('<i class="fa-solid fa-eye fa-lg" style="color: #12e4f3;"></i>'), product_path(product), class: 'btn  p-1', title: "Show" %>
    <% end %>
  </td>
</tr>
